---
import CostEfficiencyChart from './CostEfficiencyChart.jsx';

interface Props {
  title?: string;
  description?: string;
  labels: {
    fondos: string;
    ongs: string;
    fee: string;
  };
}

const {
  title = 'Proyección de Eficiencia de Costos',
  description = 'Nuestro modelo B2I escala de forma eficiente: a medida que sumamos más ONGs a la red, los costos fijos se diluyen, reduciendo el costo porcentual del servicio y maximizando el impacto de cada dólar invertido.',
  labels,
} = Astro.props;
---

<div class="bg-[#1A5F38] rounded-2xl p-8">
  {title && <h3 class="text-2xl font-bold mb-4">{title}</h3>}
  {description && <p class="text-sm md:text-base mb-8">{description}</p>}

  <div class="w-full h-[350px]">
    <CostEfficiencyChart labels={labels} client:visible />
  </div>
  <div class="flex justify-between px-8 mt-2 text-xl font-light">
    <span>2025</span>
    <span>2026</span>
    <span>2027</span>
  </div>
</div>
