---
interface Props {
  title: string;
  description?: string;
  list?: string[];
}

const { title, description, list } = Astro.props;
---

<div class="bg-[#1A5F38] text-white p-6 rounded-lg w-full h-full flex flex-col">
  <h3 class="text-2xl font-bold mb-4">{title}</h3>

  {description && <p class="text-sm mb-4 leading-relaxed">{description}</p>}

  {
    list && list.length > 0 && (
      <ul class="space-y-3">
        {list.map(item => (
          <li class="flex items-start gap-2 text-sm leading-relaxed">
            <span class="mt-1.5 w-1 h-1 bg-white rounded-full flex-shrink-0" />
            <span>{item}</span>
          </li>
        ))}
      </ul>
    )
  }
</div>
