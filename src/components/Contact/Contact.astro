---
interface Props {
  contact: {
    title: string;
    contactInfo: {
      title: string;
      email: string;
      location: string;
    };
    followUs: {
      title: string;
    };
    form: {
      title: string;
      fields: {
        name: string;
        email: string;
        socialNetwork: string;
        message: string;
      };
      send: string;
      sending: string;
      success: string;
      error: string;
    };
    socialLinks: {
      twitter: string;
      linkedin: string;
      youtube: string;
    };
  };
}

const { contact } = Astro.props;
---

<section class="py-16 md:py-24 px-6" style="background-color: #1a4d3a;">
  <div class="max-w-7xl mx-auto">
    <h2
      class="text-4xl md:text-5xl lg:text-6xl font-montserrat font-bold text-white mb-12"
    >
      {contact.title}
    </h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Left Side: Contact Information -->
      <div class="flex flex-col gap-8">
        <!-- Contact Information -->
        <div>
          <h3
            class="text-2xl md:text-3xl font-montserrat font-semibold text-white mb-6"
          >
            {contact.contactInfo.title}
          </h3>
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-3">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <span class="text-gray-300 text-base md:text-lg">
                {contact.contactInfo.email}
              </span>
            </div>
            <div class="flex items-center gap-3">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-gray-300 text-base md:text-lg">
                {contact.contactInfo.location}
              </span>
            </div>
          </div>
        </div>

        <!-- Follow Us -->
        <div>
          <h3
            class="text-2xl md:text-3xl font-montserrat font-semibold text-white mb-6"
          >
            {contact.followUs.title}
          </h3>
          <div class="flex gap-4">
            <a
              href={contact.socialLinks.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-full bg-[#2d5a47] flex items-center justify-center text-white hover:bg-[#3a6b57] transition-colors"
              aria-label="Twitter"
            >
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
              </svg>
            </a>
            <a
              href={contact.socialLinks.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-full bg-[#2d5a47] flex items-center justify-center text-white hover:bg-[#3a6b57] transition-colors"
              aria-label="LinkedIn"
            >
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
            <a
              href={contact.socialLinks.youtube}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 rounded-full bg-[#2d5a47] flex items-center justify-center text-white hover:bg-[#3a6b57] transition-colors"
              aria-label="YouTube"
            >
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Right Side: Contact Form -->
      <div>
        <h3
          class="text-2xl md:text-3xl font-montserrat font-semibold text-white mb-6"
        >
          {contact.form.title}
        </h3>
        <form
          id="contact-form"
          method="POST"
          action="/api/contact"
          class="flex flex-col gap-4"
          data-sending={contact.form.sending}
          data-success={contact.form.success}
          data-error={contact.form.error}
        >
          <input
            type="text"
            name="name"
            placeholder={contact.form.fields.name}
            required
            class="w-full px-4 py-3 rounded-lg bg-[#2d5a47] text-white placeholder-gray-400 border-none focus:outline-none focus:ring-2 focus:ring-[#4a9b7f] transition-all"
          />
          <input
            type="email"
            name="email"
            placeholder={contact.form.fields.email}
            required
            class="w-full px-4 py-3 rounded-lg bg-[#2d5a47] text-white placeholder-gray-400 border-none focus:outline-none focus:ring-2 focus:ring-[#4a9b7f] transition-all"
          />
          <input
            type="text"
            name="socialNetwork"
            placeholder={contact.form.fields.socialNetwork}
            class="w-full px-4 py-3 rounded-lg bg-[#2d5a47] text-white placeholder-gray-400 border-none focus:outline-none focus:ring-2 focus:ring-[#4a9b7f] transition-all"
          />
          <textarea
            name="message"
            placeholder={contact.form.fields.message}
            required
            rows="5"
            class="w-full px-4 py-3 rounded-lg bg-[#2d5a47] text-white placeholder-gray-400 border-none focus:outline-none focus:ring-2 focus:ring-[#4a9b7f] transition-all resize-none"
          ></textarea>
          <button
            type="submit"
            class="w-full md:w-auto px-8 py-3 rounded-lg bg-[#4a9b7f] text-white font-montserrat font-semibold flex items-center justify-center gap-2 hover:bg-[#3a7d66] transition-colors"
          >
            <span>{contact.form.send}</span>
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </button>
        </form>
        <div id="form-message" class="mt-4 hidden"></div>
      </div>
    </div>
  </div>
</section>

<script>
  const formElement = document.getElementById('contact-form');
  const messageDiv = document.getElementById('form-message');

  if (formElement && messageDiv) {
    const form = formElement as HTMLFormElement;

    form.addEventListener('submit', async e => {
      e.preventDefault();

      const submitButtonElement = form.querySelector('button[type="submit"]');
      if (!submitButtonElement) return;

      const submitButton = submitButtonElement as HTMLButtonElement;
      const sendingText = form.dataset.sending || 'Enviando...';
      const successText =
        form.dataset.success || 'Â¡Mensaje enviado exitosamente!';
      const errorText =
        form.dataset.error ||
        'Error al enviar el mensaje. Por favor, intenta nuevamente.';

      const originalText = submitButton.innerHTML;
      submitButton.disabled = true;
      submitButton.innerHTML = `<span>${sendingText}</span>`;

      const formData = new FormData(form);

      try {
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (response.ok) {
          messageDiv.className = 'mt-4 p-4 rounded-lg bg-green-600 text-white';
          messageDiv.textContent = successText;
          messageDiv.classList.remove('hidden');
          form.reset();
        } else {
          messageDiv.className = 'mt-4 p-4 rounded-lg bg-red-600 text-white';
          messageDiv.textContent = data.error || errorText;
          messageDiv.classList.remove('hidden');
        }
      } catch (error) {
        messageDiv.className = 'mt-4 p-4 rounded-lg bg-red-600 text-white';
        messageDiv.textContent = errorText;
        messageDiv.classList.remove('hidden');
      } finally {
        submitButton.disabled = false;
        submitButton.innerHTML = originalText;

        setTimeout(() => {
          messageDiv.classList.add('hidden');
        }, 5000);
      }
    });
  }
</script>
