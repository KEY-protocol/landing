---
interface Props {
  title: string;
  description: string;
  backgroundColor?: string;
  class?: string;
}

const {
  title,
  description,
  backgroundColor = '#4A9B7F',
  class: className = '',
} = Astro.props;
---

<div
  class={`rounded-xl p-6 md:p-8 ${className}`}
  style={`background-color: ${backgroundColor}`}
>
  <h3 class="text-2xl md:text-3xl font-montserrat font-bold text-white mb-4">
    {title}
  </h3>
  <p class="text-white text-sm md:text-base leading-relaxed">{description}</p>
</div>
