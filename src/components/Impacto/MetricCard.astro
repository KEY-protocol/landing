---
import { Image } from 'astro:assets';

interface Props {
  id: string;
  value: string;
  label: string;
  imageSrc: string;
  imageAlt: string;
}

const { id, value, label, imageSrc, imageAlt } = Astro.props;
---

<div
  id={`card-${id}`}
  class="relative rounded-2xl overflow-hidden aspect-4/3 group border border-l-8 border-l-[#4A9B7F] cursor-pointer transition-transform hover:scale-105 active:scale-95"
  onclick={`window.dispatchEvent(new CustomEvent('open-modal-${id}', { detail: { modalId: '${id}' } }))`}
>
  <Image
    src={imageSrc}
    width={100}
    height={100}
    loading="lazy"
    decoding="async"
    fetchpriority="high"
    alt={imageAlt}
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-linear-to-b from-black/60 to-black/40"></div>
  <div
    class="relative h-full flex flex-col justify-center items-center p-8 text-white"
  >
    <div
      class="text-5xl md:text-6xl lg:text-7xl font-montserrat font-bold mb-3"
    >
      {value}
    </div>
    <div class="text-lg md:text-xl font-montserrat font-semibold text-center">
      {label}
    </div>
  </div>
</div>
