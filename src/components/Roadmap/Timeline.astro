---
interface Props {
  quarters: Array<{
    label: string;
    completed: boolean;
  }>;
}

const { quarters } = Astro.props;
---

<div class="relative w-full mb-12">
  <!-- Timeline line -->
  <div class="absolute top-6 left-12 right-12 h-0.5 border-t-2 border-dashed border-white/30"></div>
  
  <!-- Timeline points -->
  <div class="relative flex justify-between items-start px-0">
    {quarters.map((quarter, index) => (
      <div class="flex flex-col items-center flex-1">
        <!-- Timeline point -->
        <div
          class={`relative z-10 w-12 h-12 rounded-full flex items-center justify-center transition-all ${
            quarter.completed
              ? 'bg-[#4A9B7F] border-2 border-[#4A9B7F]'
              : 'bg-transparent border-2 border-white'
          }`}
        >
          {quarter.completed && (
            <svg
              class="w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="3"
                d="M5 13l4 4L19 7"
              />
            </svg>
          )}
        </div>
        <!-- Quarter label -->
        <div class="mt-4 text-white text-sm md:text-base font-montserrat font-medium text-center">
          {quarter.label}
        </div>
      </div>
    ))}
  </div>
</div>

