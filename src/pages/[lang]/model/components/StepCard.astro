---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div
  class="step-card rounded-lg transition-colors duration-300"
  style="background: hsla(113, 30%, 16%, 0.6);"
>
  <div class="step-card-icon mb-4">
    <slot name="icon" />
  </div>

  <h3 class="step-card-title text-white font-bold leading-snug mb-4">
    {title}
  </h3>

  <p class="step-card-desc text-white/55 leading-relaxed">
    {description}
  </p>
</div>

<style>
  .step-card {
    border: 1px solid hsla(113, 50%, 90%, 0.12);
    padding: 1.75rem 1.5rem;
    background: hsla(113, 49%, 10%, 0.4);
  }

  .step-card:hover {
    border-color: hsla(113, 50%, 90%, 0.22);
    background: hsla(113, 49%, 12%, 0.6);
  }

  .step-card-title {
    font-size: clamp(0.9rem, 1.5vw, 1.05rem);
  }

  .step-card-desc {
    font-size: clamp(0.75rem, 1.2vw, 0.82rem);
  }

  .step-card-icon {
    display: flex;
    justify-content: center;
  }

  .step-card-icon :global(svg) {
    width: clamp(80px, 14vw, 130px);
    height: clamp(80px, 14vw, 130px);
    color: white;
    filter: drop-shadow(0 2px 8px hsla(0, 0%, 0%, 0.3));
    transition:
      transform 0.4s ease,
      filter 0.4s ease;
  }

  .step-card:hover .step-card-icon :global(svg) {
    transform: scale(1.06);
    filter: drop-shadow(0 4px 16px hsla(173, 80%, 80%, 0.2));
  }
</style>
