---
import '@styles/index.css';
import type { Language } from '@custom-types/index';
import Header from './Header.astro';
import Footer from './Footer.astro';
import BirthdayModal from './components/BirthdayModal.jsx';
import Contact from './components/Contact/Contact.astro';

interface Props {
  lang: Language;
  title: string;
  isHomePage?: boolean;
  footer?: {
    copyright: string;
    tagline: string;
  };
}

import es from '@i18n/locales/es.json';
import en from '@i18n/locales/en.json';
import pt from '@i18n/locales/pt.json';

const { lang, title, footer, isHomePage = false } = Astro.props;
const translations: Record<Language, typeof es | typeof en | typeof pt> = {
  es,
  en,
  pt,
};
const t = translations[lang];
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/icons/org/logo.svg" />
    <link rel="apple-touch-icon" href="/icons/org/logo.svg" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      // Prevenir FOUC (Flash of Unstyled Content) al cargar la p√°gina
      (function () {
        const savedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia(
          '(prefers-color-scheme: dark)'
        ).matches;
        const theme = savedTheme || (prefersDark ? 'dark' : 'light');

        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body
    class="overflow-x-hidden min-h-screen font-family-poppins transition-colors duration-300"
    style="background-color: var(--color-primary);"
  >
    <Header lang={lang} isHomePage={isHomePage} />
    <slot />
    <Contact contact={t.contact} />
    {footer && <Footer footer={footer} />}
    <BirthdayModal translations={t.birthday_modal} client:idle />
  </body>
</html>
