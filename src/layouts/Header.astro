---
import Logo from './components/Logo.astro';
import Navigation from './components/Navigation.astro';
import LanguageSwitcher from './components/LanguageSwitcher';
import type { Language } from '@custom-types/index';

interface Props {
  lang: Language;
  isHomePage?: boolean;
}

const { lang, isHomePage = false } = Astro.props;
---

<header
  id="main-header"
  class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-[95%] max-w-6xl px-4 sm:px-6 md:px-8 py-2.5 sm:py-3 bg-primary/30 backdrop-blur-xl border border-white/10 rounded-full shadow-[0_8px_32px_rgba(0,0,0,0.4)] transition-all duration-300 ease-out"
>
  <div class="flex items-center justify-between gap-2 sm:gap-4">
    <div class="shrink-0">
      <Logo lang={lang} />
    </div>

    <div class="hidden md:flex justify-center grow">
      <Navigation lang={lang} />
    </div>

    <div class="shrink-0 flex items-center gap-2">
      <LanguageSwitcher client:only="react" />
    </div>
  </div>
</header>
