---
interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className = '' } = Astro.props;
---

<div class={`rounded-xl p-4 sm:p-5 md:p-6 lg:p-8 ${className} bg-[#1B4D3E]`}>
  <h3
    class="text-xl sm:text-2xl md:text-2xl lg:text-3xl font-montserrat font-bold mb-3 sm:mb-4"
  >
    {title}
  </h3>
  <p class="text-xs sm:text-sm md:text-base leading-relaxed">
    {description}
  </p>
</div>
